.ui.placeholder.segment
  %h2.ui.header.center.aligned= t('sign_up')
  .ui.one.column.very.relaxed.stackable.grid
    .column
      = form_for resource, as: resource_name,
                           url: registration_path(resource_name),
                           html: { id: 'register_form', class: 'ui form sign-up' } do |f|
        = hidden_field_tag :token, params[:token]
        .field
          = f.label :email
          .ui.left.icon.input.email
            = f.email_field :email, autofocus: true, placeholder: t('email')
            %i.user.icon
        .field
          = f.label :password
          .ui.left.icon.input.password
            = f.password_field :password, placeholder: t('password')
            %i.lock.icon
        .field
          = f.label :password_confirmation
          .ui.left.icon.input.password_confirmation
            = f.password_field :password_confirmation,
                               autocomplete: 'new-password', placeholder: t('password_confirmation')
            %i.lock.icon
        = f.submit t('sign_up'), class: 'ui blue submit button', id: 'sign-up'
        .field
          = render 'devise/shared/errors', errors: resource.errors
          = render 'devise/shared/links'
