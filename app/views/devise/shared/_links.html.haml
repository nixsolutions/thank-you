- if devise_registerable?
  = link_to t('sign_up'), new_registration_path(resource_name)
  %br/
- if devise_recoverable?
  = link_to t('forgotten_password'), new_password_path(resource_name)
  %br/
- if devise_confirmable?
  = link_to t('lost_confirmation_instructions'), new_confirmation_path(resource_name)
  %br/
- if devise_lockable?
  = link_to t('lost_unlock_instructions'), new_unlock_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  = resource_class.omniauth_providers.each(&:omniauth_link)
