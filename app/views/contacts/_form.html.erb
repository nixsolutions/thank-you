<h1><%= I18n.t('contacts.form.title') %>:</h1>
<%= form_for contact do |f| %>
  <%= render 'common/errors', resource: contact %>

  <div class="container">
    <%= f.label t('activerecord.attributes.contacts.data') %><br/>
    <%= f.text_field :data %>
  </div>

  <div class="container">
    <%= f.label t('activerecord.attributes.contacts.organization') %><br/>
    <%= f.collection_select :organization_id, Organization.all, :id, :name %>
  </div>

  <div class="container">
    <%= f.label t('activerecord.attributes.contacts.contact_type') %><br/>
    <%= f.collection_select :contact_type_id, ContactType.all, :id, :main_type %>
  </div>

  <%= f.submit t('crud.actions.create') %>
<% end %>

<%= link_to I18n.t('crud.actions.back'), organizations_path %>
